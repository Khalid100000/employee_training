<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Certificate List View -->
    <record id="view_training_certificate_list" model="ir.ui.view">
        <field name="name">training.certificate.list</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <list string="Training Certificates">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="days_until_expiry" 
                       decoration-danger="days_until_expiry &lt;= 30 and days_until_expiry &gt; 0"
                       decoration-warning="days_until_expiry &lt;= 60 and days_until_expiry &gt; 30"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'valid'"
                       decoration-warning="state == 'expiring_soon'"
                       decoration-danger="state == 'expired'"/>
            </list>
        </field>
    </record>

    <!-- Training Certificate Form View -->
    <record id="view_training_certificate_form" model="ir.ui.view">
        <field name="name">training.certificate.form</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <form string="Training Certificate">
                <header>
                    <button name="action_print_certificate" 
                            string="Print Certificate" 
                            type="object" 
                            class="oe_highlight"
                            icon="fa-print"/>
                    <button name="action_renew_certificate" string="Renew Certificate" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'expired'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="course_id" options="{'no_create': True}"/>
                            <field name="enrollment_id" readonly="1"/>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="days_until_expiry" 
                                   invisible="not expiry_date"
                                   decoration-danger="days_until_expiry &lt;= 30 and days_until_expiry &gt; 0"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Training Certificate Kanban View -->
    <record id="view_training_certificate_kanban" model="ir.ui.view">
        <field name="name">training.certificate.kanban</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="state"/>
                <field name="days_until_expiry"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                </div>
                                <span t-attf-class="badge rounded-pill #{record.state.raw_value === 'expired' ? 'text-bg-danger' : record.state.raw_value === 'expiring_soon' ? 'text-bg-warning' : 'text-bg-success'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="course_id"/>
                                <div t-if="record.expiry_date.raw_value">
                                    Expires: <field name="expiry_date"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Training Certificate Search View -->
    <record id="view_training_certificate_search" model="ir.ui.view">
        <field name="name">training.certificate.search</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <search string="Search Certificates">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="Valid" name="valid" domain="[('state', '=', 'valid')]"/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('state', '=', 'expiring_soon')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="My Certificates" name="my_certificates" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Issue Date" name="issue_date" date="issue_date"/>
                <filter string="Expiry Date" name="expiry_date" date="expiry_date"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Issue Date" name="group_issue_date" context="{'group_by': 'issue_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Training Certificate Action -->
    <record id="action_training_certificate" model="ir.actions.act_window">
        <field name="name">Training Certificates</field>
        <field name="res_model">training.certificate</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_training_certificate_search"/>
        <field name="context">{'search_default_valid': 1, 'search_default_expiring_soon': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No certificates yet
            </p>
            <p>
                Certificates are automatically generated when employees complete certification courses.
            </p>
        </field>
    </record>

    <!-- Certificate Sequence -->
    <record id="sequence_training_certificate" model="ir.sequence">
        <field name="name">Training Certificate</field>
        <field name="code">training.certificate</field>
        <field name="prefix">CERT/</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
    </record>
</odoo>