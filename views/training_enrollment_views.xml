<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Enrollment List View -->
    <record id="view_training_enrollment_list" model="ir.ui.view">
        <field name="name">training.enrollment.list</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <list string="Training Enrollments">
                <field name="employee_id"/>
                <field name="session_id"/>
                <field name="course_id"/>
                <field name="enrollment_date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'attended'"
                       decoration-info="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Training Enrollment Form View -->
    <record id="view_training_enrollment_form" model="ir.ui.view">
        <field name="name">training.enrollment.form</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <form string="Training Enrollment">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_mark_attended" string="Mark Attended" type="object" 
                            class="oe_highlight" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ['cancelled', 'attended']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,attended"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="session_id" options="{'no_create': True}"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="enrollment_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add any notes about this enrollment..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Training Enrollment Kanban View -->
    <record id="view_training_enrollment_kanban" model="ir.ui.view">
        <field name="name">training.enrollment.kanban</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="employee_id"/>
                <field name="session_id"/>
                <field name="course_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                </div>
                                <span class="badge rounded-pill">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="course_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="enrollment_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Training Enrollment Search View -->
    <record id="view_training_enrollment_search" model="ir.ui.view">
        <field name="name">training.enrollment.search</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <search string="Search Enrollments">
                <field name="employee_id"/>
                <field name="session_id"/>
                <field name="course_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Attended" name="attended" domain="[('state', '=', 'attended')]"/>
                <separator/>
                <filter string="My Enrollments" name="my_enrollments" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Enrollment Date" name="enrollment_date" date="enrollment_date"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Session" name="group_session" context="{'group_by': 'session_id'}"/>
                    <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Training Enrollment Action -->
    <record id="action_training_enrollment" model="ir.actions.act_window">
        <field name="name">Training Enrollments</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_training_enrollment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new enrollment
            </p>
            <p>
                Enroll employees in training sessions and track their progress.
            </p>
        </field>
    </record>
</odoo>